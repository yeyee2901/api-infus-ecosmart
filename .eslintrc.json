{
  "root": true,
  "plugins": ["@typescript-eslint"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {},
  "env": { "node": true },
  "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended"],
  "rules": {
    "no-unused-vars": [
      "error",
      {
        "argsIgnorePattern": "^_",
        "varsIgnorePattern": "^_"
      }
    ],

    "camelcase": [
      "error",
      {
        "properties": "always"
      }
    ],

    "prefer-const": "warn",
    "no-unused-expressions": "error",
    "no-use-before-define": "error",
    "no-labels": "error",
    "eqeqeq": "error",
    "default-case": "warn",
    "default-case-last": "error",
    "no-sequences": "error",
    "yoda": "error"
  }
}
